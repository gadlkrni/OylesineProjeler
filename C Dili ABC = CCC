#include <stdio.h>

int main(){
    
    int a;
    int i;
    int b;
    int c;
    
    printf("\n");
    
    for ( i = 1; i < 10; i++ ){
        
        for ( b = 0; b < 10; b++ ){
            
            for ( c = 0; c < 10; c++ ){
                
                int ilksayi[] = {i, b, c};
                int sonsayi[] = {c, c, c};
                
                int tekdegerA = (ilksayi[0] * 100 ) + (ilksayi[1] * 10) + ilksayi[2];
                int tekdegerC = (sonsayi[0] * 100 ) + (sonsayi[1] * 10) + sonsayi[2];
                
                if ( ( tekdegerA * 3) == tekdegerC ){
                
                   printf("Sayi ABC -- : %d \n\n", tekdegerA);
                   
                   printf("Sayi C -----: %d \n\n", tekdegerC);
                   
                   break;
                     
                }
                
            }
            
        }
        
    }
    
    scanf("%d", a);
    
    return 0;
    
}
