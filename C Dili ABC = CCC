#include <stdio.h>

int main(){
    
    int a;
    int i;
    int b;
    int c;
    
    printf("\n");
    
    for ( a = 1; a < 10; a++ ){
        
        for ( b = 0; b < 10; b++ ){
            
            for ( c = 0; c < 10; c++ ){
                
                int tekdegerA = (a * 100 ) + (b * 10) + c;
                int tekdegerC = (c * 100 ) + (c * 10) + c;
                
                if ( ( tekdegerA * 3) == tekdegerC ){
                
                   printf("Sayi ABC -- : %d \n\n", tekdegerA);
                   
                   printf("Sayi CCC ---: %d \n\n", tekdegerC);
                   
                   printf("Sayi A -----: %d \n\n", a);
                   printf("Sayi B -----: %d \n\n", b);
                   printf("Sayi C -----: %d \n\n", c);
                   
                   break;
                     
                }
                
            }
            
        }
        
    }
    
    scanf("%d", i);
    
    return 0;
    
}
